                    <div class="col-6 mt-1 pl-4">
                        <input asp-for="Craf.PM_commentaire" class="form-control w-75 rounded border-light label-size-20" type="text">
                        <span asp-validation-for="Craf.PM_commentaire" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
