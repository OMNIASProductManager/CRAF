<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facilityz - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom.min.css" />
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.7.3/themes/base/jquery-ui.css">
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md bg-primary border-bottom box-shadow mb-3 p-5 align-items-center flex-nowrap">
            <div class="header-container d-flex align-items-center flex-nowrap">

                <div class="col d-flex align-items-center">
                    <div id="menu-container">

                        <!-- hamburger-menu -->
                        <div id="menu-wrapper">
                            <div id="hamburger-menu">
                                <span></span><span></span><span></span>
                            </div>
                        </div>
                        <!-- menu-wrapper -->
                        <ul class="menu-list accordion">
                            <li id="nav1" class="toggle accordion-toggle">
                                <span class="icon-plus"></span>
                                <a class="menu-link" asp-area="" asp-page="../Menu/Menu">
                                    <img src="~/SVG/Acceuil.svg" class="align-middle" height="40" />
                                    Accueil
                                </a>
                            </li>
                            <!-- accordion-toggle -->
                            <ul class="menu-submenu accordion-content">
                                <li>
                                    <a class="head" asp-area="" asp-page="../Craf/Craf">
                                        CRAF
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../Menu/Menu">
                                        Réservation de vol
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../Menu/Menu">
                                        Réservation d'hotel
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../Menu/Menu">
                                        Dossier du personnel
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../PrintStates/PrintStates">
                                        Etats d'impression
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../Menu/Menu">
                                        Autre service
                                    </a>
                                </li>
                            </ul>
                            <!-- menu-submenu accordon-content-->
                            <li id="nav2" class="toggle accordion-toggle">
                                <span class="icon-plus"></span>
                                <a class="menu-link" asp-area="" asp-page="../Profil/Profil">
                                    <img src="~/SVG/Profil.svg" class="align-middle" height="40" />
                                    Modifier mes informations
                                </a>
                            </li>
                            <!-- accordion-toggle -->
                            <ul class="menu-submenu accordion-content">
                            </ul>
                            <!-- menu-submenu accordon-content-->
                            <li id="nav3" class="toggle accordion-toggle">
                                <span class="icon-plus"></span>
                                <a class="menu-link" asp-area="" asp-page="../AdminInterface/AdminInterface">
                                    <img src="~/SVG/AdminInterface.svg" class="align-middle" height="40" />
                                    Interface administrateur
                                </a>
                            </li>
                            <!-- accordion-toggle -->
                            <ul class="menu-submenu accordion-content m-0">
                                <li>
                                    <a class="head" asp-area="" asp-page="../UserManagement/UserManagement">
                                        Gestion des utilisateurs
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../RecipientManagement/RecipientManagement">
                                        Gestion des destinataires
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../PrintStates/PrintStates">
                                        Etats d'impression
                                    </a>
                                </li>
                                <li>
                                    <a class="head" asp-area="" asp-page="../DataAnalysis/DataAnalysis">
                                        Analyse des données
                                    </a>
                                </li>
                            </ul>
                            <!-- menu-submenu accordon-content-->
                            <li id="nav4" class="toggle accordion-toggle">
                                <span class="icon-plus"></span>
                                <a class="menu-link" asp-area="" asp-page="../Connect/Connect">
                                    <img src="~/SVG/Deconnection.svg" class="align-middle" height="40" />
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                        <!-- menu-list accordion-->
                    </div>
                    <!-- menu-container -->
                    <a asp-area="" asp-page="/Menu/Menu">
                        <img src="~/SVG/FacilityzLogo.svg" height="65"/>
                    </a>
                </div>
            </div>

            <!-- image de profil et deconnexion -->
            <div class="flex-end d-flex align-items-center text-nowrap">
                <div class="col text-light d-flex align-items-center text-nowrap">
                    <a class="text-light mr-4 text-decoration-none" asp-area="" asp-page="../Profil/Profil">
                        GUILLERMET Kévin
                        <br>
                        Développeur
                    </a>
                    <a asp-area="" asp-page="/Profil/Profil">
                        <img src="~/img/PhotoProfil.PNG" height="80" width="80" style="border-radius : 5px;" />
                    </a>
                </div>

                <div class="col text-light d-flex align-items-center text-nowrap">
                    <a class="text-light mr-4 text-decoration-none" asp-area="" asp-page="../Connect/Connect">
                        Déconnexion
                    </a>
                    <a asp-area="" asp-page="../Connect/Connect">
                        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-door-open" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 15.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5zM11.5 2H11V1h.5A1.5 1.5 0 0 1 13 2.5V15h-1V2.5a.5.5 0 0 0-.5-.5z" />
                            <path fill-rule="evenodd" d="M10.828.122A.5.5 0 0 1 11 .5V15h-1V1.077l-6 .857V15H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117z" />
                            <path d="M8 9c0 .552.224 1 .5 1s.5-.448.5-1-.224-1-.5-1-.5.448-.5 1z" />
                        </svg>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer align-bottom text-muted w-100">
        &copy; 2020 - FACILITYZ - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

